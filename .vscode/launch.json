{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch ReceiveSendAPI (local nodemon)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/receive-send-api/node_modules/.bin/nodemon",
      "program": "${workspaceFolder}/receive-send-api/src/server.js",
      "restart": true,
      "env": {
        "PORT": "3000",
        "AUTH_API_URL": "http://auth-api-php:80",
        "RECORD_API_URL": "http://record-api:8000",
        "REDIS_HOST": "127.0.0.1",
        "REDIS_PORT": "6379"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Attach to Node (Docker)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "localRoot": "${workspaceFolder}/receive-send-api",
      "remoteRoot": "/usr/src/app",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Listen for Xdebug (Auth-API PHP)",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}/auth-api"
      }
    },
    {
      "name": "Launch RecordAPI (FastAPI)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/record-api/src/main.py",
      "console": "integratedTerminal",
      "env": {
        "MYSQL_USER": "user",
        "MYSQL_PASSWORD": "password",
        "MYSQL_HOST": "db",
        "MYSQL_PORT": "3306",
        "MYSQL_DATABASE": "chat_app",
        "REDIS_HOST": "redis",
        "REDIS_PORT": "6379"
      },
      "args": [
        "run",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "module": "uvicorn"
    }
  ]
}